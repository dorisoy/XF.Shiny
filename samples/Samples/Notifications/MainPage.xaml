<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:notifications="clr-namespace:Samples.Notifications"
            SelectedTabColor="#C2E812"
            UnselectedTabColor="#4BA677"
            x:Class="Samples.Notifications.MainPage"
            Title="֪ͨ">

    <TabbedPage.Children>
        <notifications:CreatePage >
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf4ad;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </notifications:CreatePage>

        <notifications:PendingPage >
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf03a;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </notifications:PendingPage>

        <notifications:LogPage >
            <ContentPage.IconImageSource>
                <FontImageSource Glyph="&#xf017;"
                                 FontFamily="FAS" />
            </ContentPage.IconImageSource>
        </notifications:LogPage>
    </TabbedPage.Children>
</TabbedPage>
